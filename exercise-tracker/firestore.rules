rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if user allows access to their own data
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // User Data - users can read/write their own profile
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow write: if isOwner(userId);
      
      // Recursive match for all subcollections (sessions, exercises)
      match /{document=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // Usernames collection - enforces uniqueness
    // Users can read (to check availability) and create new reservations
    match /usernames/{username} {
      // Anyone authenticated can check if a username exists
      allow read: if isAuthenticated();
      
      // User can create a username reservation if:
      // 1. They are authenticated
      // 2. The document doesn't already exist, OR
      // 3. They are the owner of the existing reservation
      allow create: if isAuthenticated() 
        && request.resource.data.uid == request.auth.uid;
      
      // User can update/delete only their own username reservation
      allow update, delete: if isAuthenticated() 
        && resource.data.uid == request.auth.uid;
    }

    // Global Exercises
    // Read-only for all authenticated users
    // Only writable by admin (via Console or Admin SDK)
    match /global_exercises/{exerciseId} {
      allow read: if isAuthenticated();
      allow write: if false; 
    }
  }
}
