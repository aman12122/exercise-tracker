rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Avatar images - users can only access their own avatars
    match /avatars/{userId}/{fileName} {
      // Users can read their own avatars
      allow read: if request.auth != null && request.auth.uid == userId;
      
      // Users can write their own avatars with restrictions:
      // - Must be an image
      // - Max size 5MB
      // - Must be the owner
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
      
      // Allow delete for the owner
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
    
    // Public avatars - allow anyone to read (for display purposes)
    // This is an alternative path if you want avatars to be publicly viewable
    match /public/avatars/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null 
        && request.auth.uid == userId
        && request.resource.size < 5 * 1024 * 1024
        && request.resource.contentType.matches('image/.*');
      allow delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
